{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/glossary", "destination": "/glossary/index.html" },
    { "source": "/it-cybersecurity", "destination": "/it-cybersecurity.html" },
    { "source": "/contact", "destination": "/contact_form.html" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/glossary", "dest": "/public/glossary/index.html" },
    {
      "src": "/admin",
      "dest": "/admin/dashboard.html",
      "headers": {
        "WWW-Authenticate": "Basic"
      }
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/dashboard.html",
      "headers": {
        "WWW-Authenticate": "Basic"
      }
    },
    { "src": "/assets/(.*)", "dest": "/public/assets/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    }
  ]
}
